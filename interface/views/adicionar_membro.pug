extends layout

block content
    <div class="w3-container w3-margin-top w3-display-topmiddle" style="top:100px">
        .w3-container.w3-blue
            h2.w3-center Criar equipa
        form.w3-container.w3-card-4(action='/adicionar_membro/'+id method='POST' style="width:1000px")
            #1st_File.w3-row.w3-margin-bottom
                <br>
                .w3-row.w3-margin-bottom
                    .w3-col.s3
                        label.w3-text-blue
                            b id
                    .w3-col.s9.w3-border
                        input.w3-input.w3-border.w3-light-grey(type='text' name='id' required)
                <br>
                .w3-row.w3-margin-bottom
                    .w3-col.s3
                        label.w3-text-blue
                            b name
                    .w3-col.s9.w3-border
                        input.w3-input.w3-border.w3-light-grey(type='text' name='name' required)
                <br>
                .w3-row.w3-margin-bottom
                    .w3-col.s3
                        label.w3-text-blue
                            b course
                    .w3-col.s9.w3-border
                        input.w3-input.w3-border.w3-light-grey(type='text' name='course' required)
                <br>
            #extra_files
            br
            br
            br
            input.w3-bar-item.w3-button.w3-blue-grey(type='submit' value='ADD membro' required)
        </form>
    </div>