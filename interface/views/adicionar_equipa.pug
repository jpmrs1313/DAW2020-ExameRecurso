extends layout

block content
    <div class="w3-container w3-margin-top w3-display-topmiddle" style="top:100px">
        .w3-container.w3-blue
            h2.w3-center Criar equipa
        <form class="w3-container w3-card-4" action='/adicionar_equipa' method='POST' style="width:1000px">
            #1st_File.w3-row.w3-margin-bottom
                <br>
                .w3-row.w3-margin-bottom
                    .w3-col.s3
                        label.w3-text-blue
                            b guid
                    .w3-col.s9.w3-border
                        input.w3-input.w3-border.w3-light-grey(type='text' name='guid' required)
                <br>
                .w3-row.w3-margin-bottom
                    .w3-col.s3
                        label.w3-text-blue
                            b team
                    .w3-col.s9.w3-border
                        input.w3-input.w3-border.w3-light-grey(type='text' name='team' required)
                <br>
                .w3-row.w3-margin-bottom
                    .w3-col.s3
                        label.w3-text-blue
                            b Pitch1
                    <input type="checkbox" name='pitch1' value="true" checked="true" />
                br
                .w3-row.w3-margin-bottom
                    .w3-col.s3
                        label.w3-text-blue
                            b Pitch2
                    <input type="checkbox" name='pitch2' value="true" checked="true" />
                                .w3-row.w3-margin-bottom
                br
                .w3-col.s3
                    label.w3-text-blue
                        b techPitch
                <input type="checkbox" name='techPitch' value="true" checked="true" />
                br
                .w3-col.s3
                    label.w3-text-blue
                        b businessReport
                <input type="checkbox" name='businessReport' value="true" checked="true" />
                br
                .w3-col.s3
                    label.w3-text-blue
                        b techReport
                <input type="checkbox" name='techReport' value="true" checked="true" />
            #extra_files
            br
            br
            br
            input.w3-bar-item.w3-button.w3-blue-grey(type='submit' value='Criar equipa' required)
        </form>
    </div>